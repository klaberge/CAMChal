    <script>
        document.addEventListener('DOMContentLoaded',function(){
            const questions = document.querySelectorAll('.question');
            let currentQuestionIndex = 0;

            function showQuestion(index) {
                questions.forEach((question, i) => {
                    question.style.display= i === index ? 'block' : 'none';
                });
            }
            function handleAnswerClick(event){
                if (event.target.tagName !=='P') return;

                const input = event.target.previousElementSibling; 
                const isCorrect = input.getAttribute('data-correct') === 'true';
                const feedback = event.target.closest('.question').querySelector('.feedback');

                if (isCorrect){
                    feedback.textContent = 'Correct!';
                    setTimeout(() => {
                        currentQuestionIndex++;
                        if (currentQuestionIndex < questions.length) {
                            showQuestion(currentQuestionIndex);
                        } else {
                            feedback.textContent = 'Quiz complete! Submitting...';
                            

                            // Open new page in a new tab
                            window.open('https://sites.google.com/uchicago.edu/site/password-practices', '_blank');

                            // Submit the form
                            document.getElementById('submit-btn').click();

                        }
                    }, 1000);
                } else {
                    feedback.textContent = 'Incorrect. Please try again.';
                }

            }
            
            document.querySelectorAll('.question p').forEach(p => {
                p.addEventListener('click', handleAnswerClick);
            });

            showQuestion(currentQuestionIndex);
        });
    </script>
